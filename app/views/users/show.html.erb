<div class="AccountPage">
  <div class="AccountPage-main">
    <div class="AccountPage-title">
      <h1>マイページ</h1>
    </div><br>
    <div class="Card-group">
      <div class="Card-title">
        <h2>カード情報</h2>
      </div><br>
      <div class="Card-info">
        【カード番号】
        <br>
        <%= "**** **** **** " + @card[:last4] %>
        <%# カード番号の下4桁を取得 %>

        <br>
        【有効期限】
        <br>
        <%= @card[:exp_month] %>
        <%# 有効期限の「月」を取得 %>
        /
        <%= @card[:exp_year] %>
        <%# 有効期限の「年」を取得 %>
      </div>
    </div><br>
    <div class="AccountPage__form">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
      <br>
      <%= link_to "商品一覧へ戻る", root_path%>
    </div>
  </div>
</div>